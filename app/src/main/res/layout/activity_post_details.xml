<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/postDetailsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:layout_marginBottom="20dp" />

        <!-- Group Details Section -->
        <TextView
            android:id="@+id/groupNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group: "
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/groupName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AI Research"
            android:textSize="16sp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginVertical="12dp" />

        <!-- Post Content -->
        <TextView
            android:id="@+id/messageLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/postMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post details go here..."
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Author -->
        <TextView
            android:id="@+id/emailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted by:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/postEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user@example.com"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Date -->
        <TextView
            android:id="@+id/dateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posted on:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/postDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15 July 2025"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Likes -->
        <TextView
            android:id="@+id/likesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Likes:"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/postLikes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="42"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Buttons -->
        <Button
            android:id="@+id/updatePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Post"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/purple_500"
            android:minHeight="48dp"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/deletePost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Post"
            android:textAllCaps="false"
            android:textColor="@color/purple_500"
            android:backgroundTint="@android:color/transparent"
            android:textSize="16sp"
            android:drawableEnd="@drawable/delete_icon"
            android:drawablePadding="10dp" />
    </LinearLayout>
</ScrollView>
