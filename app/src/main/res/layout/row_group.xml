<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/groupRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginHorizontal="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <!-- Circle Initial -->
            <TextView
                android:id="@+id/groupOwnerInitials"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="SU"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/circle_background"
                android:textSize="14sp"
                android:layout_marginEnd="12dp" />

            <!-- Group Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/groupName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group: Architecture"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#234567"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/groupDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is a short description of the group."
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/groupOwnerEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created by: someone@example.com"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/groupDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Created on: July 24, 2025"
                    android:textSize="12sp"
                    android:textColor="#888888"
                    android:layout_marginBottom="4dp" />

                <Button
                    android:id="@+id/joinGroupButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join Group"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/purple_500"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="left" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
