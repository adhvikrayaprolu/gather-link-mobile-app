<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowPost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginHorizontal="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">

            <!-- Profile Initial Circle -->
            <TextView
                android:id="@+id/profilePic"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:text="SU"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/circle_background"
                android:textSize="14sp"
                android:layout_marginEnd="12dp" />

            <!-- Post Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/postNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post ID: abc123"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/groupName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group: AI"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#234567"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/postMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This is your post message content here..."
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/postAuthor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By: Sample User"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/authorEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: user@gmail.com"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/postDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posted on: July 24, 2025"
                    android:textSize="12sp"
                    android:textColor="#888888" />

                <TextView
                    android:id="@+id/postLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Likes: 7"
                    android:textSize="12sp"
                    android:textColor="#777777"
                    android:layout_marginTop="2dp" />

                <Button
                    android:id="@+id/viewPostButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Post"
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="20dp"
                    android:backgroundTint="@color/purple_500"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>